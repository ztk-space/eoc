<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/liveness_accent"
    android:orientation="vertical"
    tools:ignore="ResourceName">
    <!--titleBar-->
    <RelativeLayout
        android:id="@+id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/liveness_66">

        <ImageView
            android:id="@+id/back_view_camera_activity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/liveness_20"
            android:paddingRight="@dimen/liveness_20"
            app:srcCompat="@drawable/liveness_ic_icon_md_arrow_back" />

        <TextView
            android:id="@+id/timer_text_view_camera_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/liveness_25"
            android:gravity="center"
            android:paddingLeft="@dimen/liveness_12"
            android:paddingTop="@dimen/liveness_2"
            android:paddingRight="@dimen/liveness_12"
            android:paddingBottom="@dimen/liveness_2"
            android:textColor="@color/liveness_accent_reverse"
            android:textSize="@dimen/liveness_text_28" />

    </RelativeLayout>
    <!--progressBar-->
    <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/voice_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/liveness_25"
        android:button="@drawable/liveness_selector_voice"
        android:padding="@dimen/liveness_5"
        android:visibility="invisible" />
    <!--liveness-detection views-->
    <FrameLayout
        android:id="@+id/detection_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/liveness_5">

        <!--预览控件-->
        <TextureView
            android:id="@+id/camera_texture_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" />

        <!--maskView-->
        <LinearLayout
            android:id="@+id/mask_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mask_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/liveness_ic_mask" />

            <TextView
                android:id="@+id/tip_text_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/liveness_30"
                android:layout_marginRight="@dimen/liveness_30"
                android:layout_weight="1"
                android:background="@color/liveness_accent"
                android:gravity="center"
                android:padding="@dimen/liveness_10"
                android:textColor="@color/liveness_accent_reverse"
                android:textSize="@dimen/liveness_text_36" />
        </LinearLayout>

    </FrameLayout>
    <!--tip image view-->
    <RelativeLayout
        android:id="@+id/tip_image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--光线强弱或未垂直的提示-->

        <ImageView
            android:id="@+id/tip_image_view"
            android:layout_width="@dimen/liveness_120"
            android:layout_height="@dimen/liveness_120"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</LinearLayout>
