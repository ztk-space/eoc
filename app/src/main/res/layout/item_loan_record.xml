<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_dp_20">

                <TextView
                    android:id="@+id/txt_ordernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_28" />
                <TextView
                    android:id="@+id/order_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:textColor="@color/color_font_primary"
                    android:textSize="@dimen/size_dp_28"
                    android:text=""/>
            </FrameLayout>
            <include layout="@layout/layout_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="@dimen/size_dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/size_dp_40"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lr_text_money"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/size_dp_28" />

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_dp_15"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/size_dp_28" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/size_dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/size_dp_40"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lr_text_repay"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/size_dp_28" />

                    <TextView
                        android:id="@+id/txt_repay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_dp_15"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/size_dp_28" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/size_dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/size_dp_40"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lr_text_qixian"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/size_dp_28" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_dp_15"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/size_dp_28" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:id="@+id/ll_status"
                android:padding="@dimen/size_dp_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:id="@+id/btn_to_renewal"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_dp_50"
                    android:layout_marginRight="@dimen/size_dp_5"
                    android:background="@drawable/shape_code_border"
                    style="?android:attr/borderlessButtonStyle"
                    android:textSize="@dimen/size_dp_28"
                    android:textColor="@color/color_primary"
                    android:text="@string/lr_btn_reneway"/>

                <Button
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:id="@+id/btn_to_repay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_dp_50"
                    android:layout_marginLeft="@dimen/size_dp_5"
                    android:background="@drawable/shape_bg_btn_blue"
                    style="?android:attr/borderlessButtonStyle"
                    android:textSize="@dimen/size_dp_28"
                    android:textColor="@color/color_white"
                    android:text="@string/lr_btn_pay"/>
            </LinearLayout>

        </LinearLayout>
</layout>
