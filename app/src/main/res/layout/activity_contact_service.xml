<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/public_gb_color"
        android:paddingTop="@dimen/size_dp_30"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/colorWhite"
            android:id="@+id/ll_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_dp_20">

            <TextView

                android:layout_width="@dimen/size_dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/secret_title"
                android:textColor="@color/color333333"
                android:textSize="@dimen/size_dp_35"
                />

            <ImageView
                android:layout_width="@dimen/size_dp_30"
                android:layout_height="@dimen/size_dp_30"
                android:layout_gravity="center"
                android:src="@mipmap/ic_right_arrow"
                />

        </LinearLayout>
        <View
            android:background="@color/public_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_1"/>
        <LinearLayout
            android:background="@color/colorWhite"
            android:id="@+id/ll_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_dp_20">

            <TextView

                android:layout_width="@dimen/size_dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/phone"
                android:textColor="@color/color333333"
                android:textSize="@dimen/size_dp_35"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_vn_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_dp_10"
                android:textColor="@color/color999999"
                android:textSize="@dimen/size_dp_28"
                />

            <ImageView
                android:layout_width="@dimen/size_dp_30"
                android:layout_height="@dimen/size_dp_30"
                android:layout_gravity="center"
                android:src="@mipmap/ic_right_arrow"
                />

        </LinearLayout>
        <ImageView
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/logo_vn"
            android:layout_width="@dimen/size_dp_200"
            android:layout_height="@dimen/size_dp_200" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/size_dp_60"
            android:id="@+id/tv_weixin"
            android:drawablePadding="@dimen/size_dp_10"
            android:padding="@dimen/size_dp_30"
            android:textColor="@color/black"
            android:textSize="@dimen/size_dp_32"
            android:text=""
            android:drawableLeft="@mipmap/ic_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_1"
            android:background="@color/public_line_color"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_phone"
            android:padding="@dimen/size_dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_phone"
                android:src="@mipmap/ic_service_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_line"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_35" />
            <TextView
                android:id="@+id/tv_phone"
                android:textColor="@color/black"

                android:layout_marginLeft="@dimen/size_dp_20"
                android:textSize="@dimen/size_dp_32"
                android:layout_toRightOf="@id/iv_phone"
                android:text=""
                android:layout_alignTop="@id/tv_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/size_dp_13"
                android:layout_marginLeft="@dimen/size_dp_20"
                android:textSize="@dimen/size_dp_30"
                android:layout_toRightOf="@id/iv_phone"
                android:text="@string/about_work_time"
                android:layout_below="@id/tv_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_1"
            android:background="@color/public_line_color"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_qq"
            android:drawablePadding="@dimen/size_dp_10"
            android:padding="@dimen/size_dp_30"
            android:textColor="@color/black"
            android:textSize="@dimen/size_dp_32"
            android:text=""
            android:drawableLeft="@mipmap/ic_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_1"
            android:background="@color/public_line_color"/>

    </LinearLayout>

</layout>
