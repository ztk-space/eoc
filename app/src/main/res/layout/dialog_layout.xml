<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/size_dp_20"
    android:paddingRight="@dimen/size_dp_20"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/dilog_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_80"
        android:background="#e6e6fa"
        android:textSize="@dimen/size_dp_32"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_dp_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_2"
        android:background="#B4CDCD" />

    <LinearLayout
        android:id="@+id/dialog_llyout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6e6fa"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="@dimen/size_dp_80"
            android:paddingBottom="@dimen/size_dp_15"
            android:paddingLeft="@dimen/size_dp_20"
            android:paddingRight="@dimen/size_dp_20"
            android:paddingTop="@dimen/size_dp_15"
            android:textSize="@dimen/size_dp_25"
            android:textColor="#000000"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_1"
        android:background="#B4CDCD" />

    <LinearLayout
        android:id="@+id/dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_80"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dialog_pos"
            android:layout_width="@dimen/size_dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e6e6fa"
            android:gravity="center"
            android:text="下次再说"
            android:textSize="@dimen/size_dp_30"
            android:textColor="#000000" />

        <View
            android:layout_width="@dimen/size_dp_1"
            android:layout_height="match_parent"
            android:background="#B4CDCD" />

        <TextView
            android:textSize="@dimen/size_dp_30"
            android:id="@+id/tv_dialog_neg"
            android:layout_width="@dimen/size_dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e6e6fa"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>