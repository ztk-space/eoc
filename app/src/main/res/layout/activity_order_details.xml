<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.modal.xqkd.minehome.activity.RecordDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/public_gb_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_dp_20"
                android:background="@color/color_white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_34"
                    android:layout_margin="@dimen/size_dp_30"
                    android:text=""/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_dp_1"
                    android:layout_marginLeft="@dimen/size_dp_30"
                    android:layout_marginRight="@dimen/size_dp_30"
                    android:background="@color/public_line_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_dp_30"
                    android:orientation="vertical">

                    <com.eoc.dong.common.widget.OrderItemView
                        android:id="@+id/item_apply_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:orderTitle="@string/rd_sqsj"
                        app:orderVal=""
                        />

                    <com.eoc.dong.common.widget.OrderItemView
                        android:id="@+id/item_loan_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:orderTitle="@string/rd_ddje"
                        app:orderVal=""
                        />

                    <com.eoc.dong.common.widget.OrderItemView
                        android:id="@+id/item_loan_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:orderTitle="@string/rd_ddqx"
                        app:orderVal=""
                        />

                    <com.eoc.dong.common.widget.OrderItemView
                        android:id="@+id/item_real_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:orderTitle="@string/rd_sjdz"
                        app:orderVal=""
                        />

                    <!--       <com.eoc.dong.common.widget.OrderItemView
                               android:id="@+id/item_bankcard"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               app:orderTitle="@string/ld_text_dzyhk"
                               app:orderVal=""
                               />-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_dp_120">
                        <TextView
                            android:text="@string/ld_text_dzyhk"
                            android:textColor="@color/color666666"
                            android:gravity="left|center_vertical"
                            app:autoSizeTextType="uniform"
                            app:autoSizeStepGranularity="@dimen/size_dp_2"
                            app:autoSizeMinTextSize="@dimen/size_dp_10"
                            app:autoSizeMaxTextSize="@dimen/size_dp_30"
                            android:layout_width="@dimen/size_dp_260"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/item_bankcard"
                            android:textColor="@color/color666666"
                            app:autoSizeTextType="uniform"
                            app:autoSizeStepGranularity="@dimen/size_dp_2"
                            app:autoSizeMinTextSize="@dimen/size_dp_10"
                            app:autoSizeMaxTextSize="@dimen/size_dp_30"
                            android:gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:layout_width="@dimen/size_dp_0"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <com.eoc.dong.common.widget.OrderItemView
                        android:visibility="gone"
                        android:id="@+id/item_interest_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:orderTitle="@string/ld_text_ll"
                        app:orderVal=""
                        />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="@dimen/size_dp_30"
                android:layout_marginTop="@dimen/size_dp_20">
                <TextView
                    android:id="@+id/txt_zong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_34"
                    android:layout_centerVertical="true"
                    android:text="@string/ld_text_zhfy"/>
                <ImageView
                    android:id="@+id/img_loan_detail_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_zong"
                    android:padding="@dimen/size_dp_10"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_hint"/>
                <TextView
                    android:id="@+id/txt_zongfeitong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/size_dp_30"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text=""/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="@dimen/size_dp_30"
                android:layout_marginTop="@dimen/size_dp_20"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_34"
                    android:text="@string/ld_text_hkxx"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_dp_1"
                    android:layout_marginTop="@dimen/size_dp_30"
                    android:background="@color/public_line_color"/>

                <com.eoc.dong.common.widget.OrderItemView
                    android:visibility="gone"
                    android:id="@+id/item_pay_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:orderTitle="@string/rd_yhbj"
                    app:orderVal=""
                    />

                <com.eoc.dong.common.widget.OrderItemView
                    android:id="@+id/item_pay_overdue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:orderTitle="@string/rd_yqfy"
                    android:visibility="gone"
                    app:orderVal=""

                    />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:id="@+id/fl_total_rent_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_dp_20">

                    <TextView

                        app:autoSizeStepGranularity="@dimen/size_dp_2"
                        app:autoSizeMinTextSize="@dimen/size_dp_10"
                        app:autoSizeMaxTextSize="@dimen/size_dp_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ld_text_yhje"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/size_dp_34"
                        />

                    <TextView


                        app:autoSizeMinTextSize="@dimen/size_dp_10"
                        app:autoSizeMaxTextSize="@dimen/size_dp_30"
                        android:id="@+id/tv_total_rent_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/size_dp_34"
                        />

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_1"
                android:layout_marginRight="@dimen/size_dp_30"
                android:layout_marginLeft="@dimen/size_dp_30"
                android:background="@color/public_line_color"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"

                android:padding="@dimen/size_dp_30"
                android:orientation="vertical"
                >
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_34"
                    android:text="@string/ld_text_jyxy"
                    />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_dp_30"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/txt_loanagreement1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/size_dp_28"
                        android:text="@string/ld_text_jkxy"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_repay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/size_dp_30"
                        android:text="@string/ld_text_need"/>
                    <TextView
                        android:id="@+id/txt_limitPayTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/size_dp_30"
                        android:text=""/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/size_dp_30"
                        android:text="@string/ld_text_pay"/>
                    <TextView
                        android:id="@+id/txt_realPayMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/size_dp_30"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_loan_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:layout_marginTop="@dimen/size_dp_20"
                android:padding="@dimen/size_dp_30"
                android:visibility="gone">
                <Button
                    android:id="@+id/btn_loan_again"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_dp_90"
                    android:background="@drawable/shape_bg_btn_blue"
                    style="?android:attr/borderlessButtonStyle"
                    android:textSize="@dimen/size_dp_34"
                    android:textColor="@color/color_white"
                    android:text="再次借款"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_to_repay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:layout_marginTop="@dimen/size_dp_20"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:padding="@dimen/size_dp_30"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:textAllCaps="false"
                        android:id="@+id/btn_to_renewal"
                        android:layout_width="@dimen/size_dp_0"
                        android:layout_height="@dimen/size_dp_90"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/size_dp_10"
                        android:background="@drawable/shape_code_border"
                        style="?android:attr/borderlessButtonStyle"
                        android:textSize="@dimen/size_dp_34"
                        android:textColor="@color/color_primary"
                        android:text="@string/lr_btn_reneway"/>

                    <Button
                        android:textAllCaps="false"
                        android:id="@+id/btn_to_repay"
                        android:layout_width="@dimen/size_dp_0"
                        android:layout_height="@dimen/size_dp_90"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/size_dp_10"
                        android:background="@drawable/bg_btn_go_money"
                        style="?android:attr/borderlessButtonStyle"
                        android:textSize="@dimen/size_dp_34"
                        android:textColor="@color/color_white"
                        android:text="@string/lr_btn_pay"/>
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/size_dp_10"
                    android:layout_marginBottom="@dimen/size_dp_20"
                    android:text="Bạn cũng có thể chuyển vào tài khoản sau, chúng tôi sẽ tạo một tài khoản thủ công; Tên: Tee Foong Han; Ngân hàng: TechcomBank; Tài khoản: 19034219794013"
                    android:layout_marginLeft="@dimen/size_dp_20"
                    android:layout_marginRight="@dimen/size_dp_20"
                    android:lineSpacingExtra="@dimen/size_dp_15"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/size_dp_28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</layout>
