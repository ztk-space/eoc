<!--                        android:layout_width="@dimen/size_dp_300"-->
<!--                        android:layout_height="@dimen/size_dp_180" />-->
            <!--        <TextView-->
            <!--            android:layout_marginTop="@dimen/size_dp_20"-->
            <!--            android:textColor="@color/color999999"-->
            <!--            android:textSize="@dimen/size_dp_25"-->
            <!--            android:text="@string/face_chi"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content" />-->
            <!--    </LinearLayout>-->
            <View
                android:visibility="gone"
                android:background="@color/public_line_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_1"></View>
            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_new_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_90"
                android:background="@drawable/bg_btn_go_money"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="@dimen/size_dp_80"
                android:layout_marginRight="@dimen/size_dp_80"
                android:layout_marginTop="@dimen/size_dp_50"
                android:textSize="@dimen/size_dp_30"
                android:layout_marginBottom="@dimen/liveness_50"
                android:textColor="@color/colorWhite"
                android:text="@string/basic_btn_tj"/>


        </LinearLayout>
    </ScrollView>
</layout>