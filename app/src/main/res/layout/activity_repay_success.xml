<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/ll_huan_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_dp_70"
            android:src="@mipmap/ic_success"/>
        <TextView
            android:id="@+id/tv_huan_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333333"
            android:textSize="@dimen/size_dp_34"
            android:layout_marginTop="@dimen/size_dp_30"
            android:text="恭喜您！付款成功"/>
        <TextView
            android:id="@+id/tv_huan_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/size_dp_32"
            android:layout_marginTop="@dimen/size_dp_30"
            android:text="提前还款信用增值！"/>
        <Button
            android:id="@+id/btn_loan_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_90"
            android:background="@drawable/bg_btn_go_money"
            style="?android:attr/borderlessButtonStyle"
            android:layout_margin="@dimen/size_dp_90"
            android:textSize="@dimen/size_dp_34"
            android:textColor="@color/colorWhite"
            android:text="借款详情"/>
    </LinearLayout>
</layout>
