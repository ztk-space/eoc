<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/public_gb_color"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginTop="@dimen/size_dp_20"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_98">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_dp_30"
                    android:text="姓名"/>
                <EditText
                    android:id="@+id/ed_name"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/size_dp_200"
                    android:hint="请输入姓名"
                    android:textColorHint="@color/color999999"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_30"
                   />
            </RelativeLayout>
           <include layout="@layout/layout_line_right"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_98">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_dp_30"
                    android:text="身份证"
                    android:id="@+id/textView5" />

                <EditText
                    android:id="@+id/ed_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_dp_200"
                    android:background="@null"
                    android:hint="请输入身份证号"
                    android:textColor="@color/color333333"
                    android:textColorHint="@color/color999999"
                    android:textSize="@dimen/size_dp_30" />
            </RelativeLayout>
            <include layout="@layout/layout_line_right"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_98">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_dp_30"
                    android:text="储蓄卡"/>
                <EditText
                    android:id="@+id/ed_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:background="@null"
                    android:textColorHint="@color/color999999"
                    android:textColor="@color/color333333"
                    android:layout_marginLeft="@dimen/size_dp_200"
                    android:textSize="@dimen/size_dp_30"
                    android:hint="请输入银行卡号"/>
            </RelativeLayout>
            <include layout="@layout/layout_line"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_98">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_dp_30"
                    android:text="预留手机号"/>
                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColorHint="@color/color999999"
                    android:textColor="@color/color333333"
                    android:inputType="number"
                    android:maxLength="11"
                    android:layout_marginLeft="@dimen/size_dp_200"
                    android:textSize="@dimen/size_dp_30"
                    android:hint="请输入手机号码"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_inner"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_86"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:visibility="gone">
                <EditText
                    android:id="@+id/ed_verification_code"
                    android:layout_width="@dimen/size_dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_dp_28"
                    android:hint="请输入图形验证码"
                    android:textColorHint="#c3c3c3"
                    android:textColor="@color/color666666"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_marginLeft="@dimen/size_dp_20"
                    android:background="@null"/>
                <ImageView
                    android:id="@+id/iv_verification_code"
                    android:layout_width="@dimen/size_dp_200"
                    android:layout_height="@dimen/size_dp_60"
                    android:layout_marginRight="@dimen/size_dp_20"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        <include layout="@layout/layout_line_right"/>
            <RelativeLayout
                android:id="@+id/rl_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_98"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/size_dp_30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_dp_30"
                    android:text="验证码"/>
                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColorHint="@color/color999999"
                    android:textColor="@color/color333333"
                    android:layout_toLeftOf="@+id/text_authen_code"
                    android:layout_marginRight="@dimen/size_dp_20"
                    android:layout_marginLeft="@dimen/size_dp_200"
                    android:textSize="@dimen/size_dp_30"
                    android:hint="请输入验证码"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/text_authen_code"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_dp_60"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_font_primary"
                    android:background="@drawable/shape_code_border"
                    style="?android:attr/borderlessButtonStyle"
                    android:textSize="@dimen/size_dp_25"
                    android:paddingLeft="@dimen/size_dp_20"
                    android:paddingRight="@dimen/size_dp_20"
                    android:layout_marginRight="@dimen/size_dp_30"
                    android:text="获取验证码"/>
            </RelativeLayout>
            <include layout="@layout/layout_line"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_dp_20"
            android:layout_marginTop="@dimen/size_dp_20"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/ch_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="我同意"
                android:drawablePadding="@dimen/size_dp_5"
                android:textSize="@dimen/size_dp_28"
                android:textColor="@color/color666666"
                android:background="@null"
                android:drawableLeft="@drawable/selector_radiobutton"/>
            <TextView
                android:id="@+id/txt_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_font_primary"
                android:textSize="@dimen/size_dp_28"
                android:text="《银行卡用户授权协议》"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_bankcard_auth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_90"
            android:background="@drawable/shape_bg_btn_blue"
            style="?android:attr/borderlessButtonStyle"
            android:layout_margin="@dimen/size_dp_30"
            android:textSize="@dimen/size_dp_34"
            android:textColor="@color/colorWhite"
            android:text="提交"/>
    </LinearLayout>
</layout>
