<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout

    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_dp_100"
    android:layout_marginRight="@dimen/size_dp_100"
    android:background="@drawable/ic_shape_dialog"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_90"
        android:gravity="center"
        android:text="@string/language_option"
        android:textColor="@color/color333333"
        android:textSize="@dimen/size_dp_33" />

    <TextView
       android:background="@color/public_line_color"
        android:paddingLeft="@dimen/size_dp_25"
        android:paddingRight="@dimen/size_dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_1" />

    <RelativeLayout
        android:id="@+id/rl_chinese"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_85">
        <TextView
            android:layout_marginLeft="@dimen/size_dp_25"
            android:textSize="@dimen/size_dp_26"
            android:text="@string/language_ch"
            android:textColor="@color/color333333"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentBottom="true"
            android:background="@color/public_line_color"
            android:paddingLeft="@dimen/size_dp_25"
            android:paddingRight="@dimen/size_dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_vn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_85">
        <TextView
            android:layout_marginLeft="@dimen/size_dp_25"
            android:textSize="@dimen/size_dp_26"
            android:text="@string/language_vn"
            android:textColor="@color/color333333"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentBottom="true"
            android:background="@color/public_line_color"
            android:paddingLeft="@dimen/size_dp_25"
            android:paddingRight="@dimen/size_dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_1" />
    </RelativeLayout>


    <TextView

        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_90"
        android:gravity="center"
        android:text="@string/language_cancel"
        android:textColor="@color/public_orange"
        android:textSize="@dimen/size_dp_33" />
</LinearLayout>
</layout>


